
<h4> Displaying search results for Books </h4>

<head>
  <style>

      table, td, th
      {
          border:2px solid blue;
      }
      th
      {
          background-color: royalblue;
          color:white;
      }
      td, th
      {
          padding:5px;
      }
      tr:nth-child(even) {background-color: white}
      tr:nth-child(odd) {background-color: lightcyan}
  </style>
</head>

<body>
<table>
  <tr>
    <th>Book Name</th>
    <th>Book Price</th>

    <th> ACTION </th>
    <th> ACTION </th>

  </tr>

  <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.book_name.upcase, book_path(book) %></td>
        <td><%= book.price %></td>
        <td> <%= link_to "EDIT", edit_book_path(book), :class => 'btn btn-mini btn-warning' %> </td>
        <td> <%= link_to "DELETE", book_path(book), method: :delete, :class => 'btn btn-mini btn-danger' %> </td>
      </tr>
  <% end %>
</table>
</body>



