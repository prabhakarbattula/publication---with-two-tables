<%= form_for @book, :url => book_path do |book| %>
	Book Name: <%= book.text_field :book_name %> <br>
    Price: <%= book.text_field :price, :class => 'price', :value => (number_with_precision(book.object.price, :precision => 2) || 0.00) %>
    <br>
    Select Author: <%= book.select :author_id, Author.all.collect {|p| [p.author_name, p.id]}, {include_blank:true } %> <br>  <br>
    <%= book.submit "Edit Book" %>   <%= link_to 'Go Back ', books_path %>

<% end %>

