
<h4> Displaying search results for Authors </h4>

<head>
  <style>

      table, td, th
      {
          border:2px solid blue;
      }
      th
      {
          background-color: royalblue;
          color:white;
      }
      td, th
      {
          padding:5px;
      }
      tr:nth-child(even) {background-color: white}
      tr:nth-child(odd) {background-color: lightcyan}
  </style>
</head>

<body>
<table>
  <tr>
    <th>Author Name</th>

    <th> ACTION </th>
    <th> ACTION </th>

  </tr>

  <% @authors.each do |author| %>
      <tr>
        <td><%= link_to author.author_name.upcase, author_path(author) %></td>

        <td> <%= link_to "EDIT", edit_author_path(author), :class => 'btn btn-mini btn-warning' %> </td>
        <td> <%= link_to "DELETE", author_path(author), method: :delete, :class => 'btn btn-mini btn-danger' %> </td>
      </tr>
  <% end %>
</table>
</body>

<%= link_to "Go Back to Main Page", root_authors_path %>

