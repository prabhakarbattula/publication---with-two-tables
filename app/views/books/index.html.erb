

<hr>
<h4> Displaying List of Books </h4>
<hr>

<head>
<style>
    table, td, th
    {
        border:2px solid blue;
    }
    th
    {
        background-color: royalblue;
        color:white;
    }
    td, th
    {
        padding:5px;
    }
    tr:nth-child(even) {background-color: white}
    tr:nth-child(odd) {background-color: lightcyan}
</style>
</head>

<body>
<table>
  <tr>
    <th>Book Name</th>
    <th>Author Name</th>
    <th> ACTION </th>
    <th> ACTION </th>
  </tr>

  <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name.upcase %></td>
        <td><%= book.author.author_name.upcase %></td>

        <td> <%= link_to "EDIT", edit_book_path(id: book.id), :class => 'btn btn-mini btn-warning' %> </td>
        <td> <%= link_to "DELETE", book_path(id: book.id), method: :delete, :class => 'btn btn-mini btn-danger' %> </td>
      </tr>
  <% end %>
</table>
</body>

