<%= form_for @author do |author| %>	Author's Name : <%= author.text_field :author_name %>   <br> <br>    Author's Sex : <%= author.select(:sex, %w{ Male Female }, :include_blank => true) %>    <br> <br>    Author's Country : <%= author.text_field :country %>    <br> <br>	<%= author.submit "Create new Author", :class => "btn-info btn-large" %><% end %>