<%= form_for @book, :url => books_path do |book| %>
	Book Name: <%= book.text_field :book_name %> <br>
	<%# book.hidden_field :author_id %>
	<br>
    Select Author: <%= book.select :author_id, Author.all.collect {|p| [p.author_name, p.id]}, {include_blank:true } %> <br>
    <br>
    <%= book.submit "Create New Book" %>

    <%= link_to 'Go Back ', root_author_path %>

<% end %>

